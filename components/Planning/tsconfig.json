{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "rootDir": ".",
    "outDir": "../../.tsbuildinfo/planning",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../../lib/*"],
      "@/types/*": ["../../types/*"],
      "@/components/ui/*": ["../ui/*"],
      "@/components/layout/*": ["../layout/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.tsx"
  ]
}
